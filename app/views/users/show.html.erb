<div class="row">
   <div class="col-md-8">
     <div class="media">
       <br />
       <% avatar_url = @user.avatar_url(128) %>
       <% if avatar_url %>
         <div class="media-left">
           <%= image_tag avatar_url, class: 'media-object' %>
         </div>
       <% end %>
       <div class="media-body">
         <h2 class="media-heading"><%= @user.name %></h2>
         <small>
           <%= pluralize(@user.posts.count, 'post') %>,
           <%= pluralize(@user.comments.count, 'comment') %>
         </small>
       </div>
     </div>
     <h2>Posts</h2>
    <%= user_posts(@user) %>

    <h2>Comments</h2>
    <%= user_comments(@user) %>
  </div>
  <div class="col-md-4" style="border-left: 1px solid #ccc;">
    <h3><%= @user.name %>'s Favorited Posts</h3>
    <% @user.favorites.each do |f| %>
      <div class="media">
        <br />
        <% avatar_url = f.post.user.avatar_url(48) %>
        <% if avatar_url %>
          <div class="pull-right">
            <%= image_tag avatar_url, class: 'media-object' %>
          </div>
        <% end %>
        <%= render partial: 'votes/voter', locals: { post: f.post } %>
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to f.post.title, topic_post_path(f.post.topic, f.post) %>
            <%= render partial: "labels/list", locals: { labels: f.post.labels } %>
          </h4>
          <small>
            submitted <%= time_ago_in_words(f.post.created_at) %> ago by <%= link_to f.post.user.name, user_path(f.post.user) %> <br>
            <%= f.post.comments.count %> Comments
          </small>
        </div>
      </div>
    <% end %>
   </div>
 </div>